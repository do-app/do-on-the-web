<% if chores %>
  <ul class="chores">
    <% chores.each do |chore| %>
    <li class="chore">
      <%= chore.name %>
      <%= chore.points %>
      <%= chore.length_of_time %>
      <%= chore.times_per_week %>
      <div class="edit">
        <%= button_to "Edit", edit_household_chore_path(chore.household, chore), method: :get %>
      </div>
      <div class="complete">
        <%= form_for :message, url: messages_path do |f| %>
          <%= f.hidden_field :body, :value => "hhhhhh" %>
          <%= f.submit "X" %>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
<% else %>
  <p><em>There are no chores!</em></p>
<% end %>