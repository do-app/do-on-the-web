<h1><%= @household.name %></h1>

<% if @household.members %>
  <ul class="members">
    <% @household.members.each do |member| %>
      <li><%= link_to member.name, user_path(member) %></li>
    <% end %>
  </ul>
<% end %>

<% if @household.chores %>
  <ul class="chores">
    <% @household.chores.each do |chore| %>
    <li><%= chore.name %> <%= chore.points %> <%= chore.length_of_time %><%= chore.times_per_week %></li>
    <% end %>
  </ul>
<% else %>
  <p><em>This household has no chores!</em></p>
<% end %>