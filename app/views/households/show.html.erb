<h1 id="housename"><%= @household.name %></h1>


  <% unless current_user.household %>
    <%= button_to "Join Household", join_household_path(@household), method: :put %>
  <% end %>

  
   

    
  
  
  <% if @household.members %>
   <div id="members_list" >
    <table>
	<tr><th>Member</th><th>Points</th></tr>
      <% @household.members.each do |member| %>
        <tr>  <td>  <%= link_to member.name, user_path(member) %>  </td> <td> <%= member.points%> </td> </tr>
      <% end %>
    </table>
   </div>
  <% end %>

 


  
  <div class="chores_list">
  <h2>House Chores</h2>
  <%= render partial: "chores/chores", locals: { chores: current_user.household.chores } %>
  </div>

  <br>
  <div class="rewards_list">
  <h2>House Rewards</h2>
  <%= render partial: "rewards/rewards", locals: { rewards: @household.rewards } %>
  </div>

  
   <div class="leave">
  <% if current_user.household == @household %>
    <%= link_to "Leave Household", leave_household_path(@household), method: :put %>
  <% end %>
  </div>
